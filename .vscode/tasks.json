{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "go build && go run .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Windows Build",
            "type": "shell",
            "command": "GOOS=windows GOARCH=amd64 go build -o out/quickstart.exe .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Darwin Build",
            "type": "shell",
            "command": "GOOS=darwin GOARCH=amd64 go build -o out/quickstart-darwin .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Linux Build",
            "type": "shell",
            "command": "GOOS=linux GOARCH=amd64 go build -o out/quickstart-linux .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}